<section class="event-details">
  <div class="image">
    <%= image_tag @event.image_file_name %>
    <% if logged_in_user %>
      <div class="likes">
        <%= like_or_unlike_button(@event, @like) %>
        <div class="count">
          <%= @likers.size %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="details">
    <h1><%= @event.name %></h1>
    <h2>
      <%= pluralize(@event.capacity, "spot") %> &bull; <%= price(@event) %>
    </h2>
    <h3>
      <%= day_and_time(@event) %> in <%= @event.location %>
    </h3>
    <p>
      <%= @event.description %>
    </p>
    <div class="register">
      <%= show_register_or_sold_out(@event) %>
      <p><%= link_to 'Who is registered?', event_registrations_path(@event) %></p>
    </div>
  </div>

  <aside>
    <% if @likers.present? %>
      <h4>Liked By</h4>
      <ul>
        <% @likers.each do |user| %>
          <li><%= link_to user.name, user %></li>
        <% end %>
      </ul>
    <% end %>

  <% if @categories.present? %>
    <h4>Categories<h4>
    <ul>
      <%= @categories.each do |category| %>
        <li><%= c.name %></li>
      <% end %>
    </ul>
  <% end %>
  </aside>
</section>

<% if user_is_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_event_path(@event), class: "button" %>
    <%= link_to  "Delete", @event, class: "button", method: :delete, data: { confirm: "Really?" } %>
  </section>
<% end %>
